@model TripJetLagAdmin.Models.Trip

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Trip</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TripId" />
        <div class="form-group">
            <label asp-for="Traveler" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TravelerId" class="form-control" asp-items="ViewBag.TravelerId"></select>
                <span asp-validation-for="TravelerId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NotesRetrieved" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input readonly asp-for="NotesRetrieved" class="form-control" />
                <span asp-validation-for="NotesRetrieved" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="ReadyToDeliver" />
                    <label asp-for="ReadyToDeliver"></label>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
